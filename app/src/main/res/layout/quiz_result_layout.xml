<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/monestro_bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Result"
        android:textColor="#000"
        android:textSize="22dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/monestro_medium"
            android:text="Total Question"
            android:textColor="#000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/quiz_result_total_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/monestro_regular"
            android:text="50"
            android:textColor="#B3000000"
            android:textSize="16dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="5dp"
        android:background="#4D000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/monestro_medium"
            android:text="Correct Answers"
            android:textColor="#000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/quiz_result_correct_ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/monestro_regular"
            android:text="14"
            android:textColor="#B3000000"
            android:textSize="16dp" />

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="5dp"
        android:background="#4D000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/monestro_medium"
            android:text="Percentage"
            android:textColor="#000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/quiz_result_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/monestro_regular"
            android:text="20%"
            android:textColor="#B3000000"
            android:textSize="16dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/quiz_result_btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/black_rect_bg"
        android:fontFamily="@font/monestro_bold"
        android:text="Done"
        android:textColor="#fff"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"/>

</LinearLayout>
