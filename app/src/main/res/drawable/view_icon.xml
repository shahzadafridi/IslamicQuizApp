<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="8dp"
                android:color="#fff" />
            <corners android:radius="12dp" />
            <padding
                android:right="16dp"
                android:top="16dp"
                android:bottom="16dp"
                android:left="16dp"/>
        </shape>
    </item>

    <item android:drawable="@drawable/eye" />

</layer-list>